    <script>
        // Newsletter form submission
        const NEWSLETTER_WEBHOOK = 'https://script.google.com/macros/s/AKfycbwlbh7bz20Fo0QiUAICb9DmCMHIxYMWFVK1uGrjFBxM_mC3S2S3BRniqFtimuufs3VB/exec';

        document.querySelector('.newsletter-form').addEventListener('submit', async function (e) {
            e.preventDefault();
            const email = this.querySelector('input[name="email"]').value;
            const statusEl = document.getElementById('newsletter-status');
            const submitBtn = this.querySelector('button[type="submit"]');

            submitBtn.disabled = true;
            submitBtn.textContent = 'Subscribing...';

            try {
                const response = await fetch(NEWSLETTER_WEBHOOK, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email: email })
                });

                const data = await response.json();

                if (data.status === 'success') {
                    statusEl.className = 'newsletter-status success';
                    statusEl.textContent = '✓ Thanks! You\'re on the list. Check your inbox for weekly sales insights.';
                    this.reset();
                } else if (data.status === 'duplicate') {
                    statusEl.className = 'newsletter-status success';
                    statusEl.textContent = '✓ You\'re already on the list! Look out for our weekly emails.';
                    this.reset();
                } else {
                    statusEl.className = 'newsletter-status error';
                    statusEl.textContent = '✗ ' + (data.message || 'Something went wrong. Please try again.');
                }

                setTimeout(() => {
                    statusEl.className = 'newsletter-status';
                    statusEl.textContent = '';
                }, 6000);

            } catch (error) {
                statusEl.className = 'newsletter-status error';
                statusEl.textContent = '✗ Connection error. Please check your internet and try again.';
                console.error('Newsletter signup error:', error);
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Subscribe';
            }
        });
    </script>

